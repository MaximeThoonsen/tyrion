{
  "name": "tyrionl",
  "version": "1.1.2",
  "description": "technical debt collector tool",
  "repository": {
    "type": "git",
    "url": "https://github.com/theodo/tyrion.git"
  },
  "main": "./lib/index.js",
  "bin": {
    "tyrion": "./lib/index.js"
  },
  "scripts": {
    "tsc": "tsc",
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "exec": "ts-node src/index.ts -p ./test_project",
    "build": "tsc -p . && cp -r src/template/ lib/template/",
    "test": "npm run build && sudo npm i -g && tyrion",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "push": "npm run build && npm publish"
  },
  "author": "Maxime Thoonsen",
  "license": "ISC",
  "dependencies": {
    "@types/cli-table": "^0.3.0",
    "@types/figlet": "^1.2.0",
    "@types/glob": "^7.1.1",
    "@types/nodegit": "^0.24.4",
    "chalk": "^2.4.2",
    "clear": "^0.1.0",
    "cli-table": "^0.3.1",
    "colors": "^1.3.3",
    "commander": "^2.19.0",
    "figlet": "^1.2.1",
    "glob": "^7.1.3",
    "lodash": "^4.17.11",
    "nodegit": "^0.24.1",
    "open": "^6.3.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.123",
    "@types/node": "^12.0.4",
    "nodemon": "^1.18.10",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3333"
  },
  "directories": {
    "lib": "lib"
  }
}
